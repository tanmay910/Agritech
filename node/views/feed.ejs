<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Feed</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .navbar {
      background-color: #333;
      overflow: hidden;
    }
    .navbar a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 20px;
      text-decoration: none;
    }
    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }
    .container {
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="/node/feed">Feed</a>
    <% if (user.role === 'trader') { %>
      <a href="/node/create">Create Post</a>
    <% } %>
    <% if (user.role === 'trader') { %>
      <a href="/node/traderPosts">My Posts</a>
    <% } else if (user.role === 'farmer') { %>
      <a href="/node/farmerInterests">My Interests</a>
    <% } %>
    <a href="/node/logout">Logout</a>
  </div>

  <div class="container">
    <h1>Feed</h1>
    <h2>Welcome, <%= user.username %>!</h2>
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <h3><%= post.title %></h3>
          <p><%= post.description %></p>
          <p>Quantity: <%= post.quantity %></p>
          <p>Contact: <%= post.contactInfo %></p>
          <p>Posted by: <%= post.postedBy.username %></p>
          <% if (user.role === 'farmer' && !post.interestedFarmers.includes(user._id)) { %>
            <form action="/node/interested/<%= post._id %>" method="POST">
              <button type="submit">I'm Interested</button>
            </form>
          <% } %>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
