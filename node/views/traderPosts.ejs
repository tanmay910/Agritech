<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trader Posts</title>
</head>
<body>
  <h1>Your Posts</h1>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h3><%= post.title %></h3>
        <p><%= post.description %></p>
        <p>Quantity: <%= post.quantity %></p>
        <p>Contact: <%= post.contactInfo %></p>
        <h4>Interested Farmers:</h4>
        <ul>
          <% post.interestedFarmers.forEach(farmer => { %>
            <li><%= farmer.username %></li>
          <% }); %>
        </ul>
      </li>
    <% }); %>
  </ul>
</body>
</html>
