<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Interests</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    .navbar {
      background-color: #333;
      overflow: hidden;
    }
    .navbar a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 20px;
      text-decoration: none;
    }
    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }
    .container {
      padding: 20px;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
      color: #333;
    }
    ul {
      list-style-type: none;
      padding: 0;
      max-width: 800px;
      margin: 20px auto;
    }
    li {
      background-color: white;
      margin: 10px 0;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h3 {
      margin: 0 0 10px 0;
      color: #333;
    }
    p {
      margin: 5px 0;
      color: #666;
    }
  </style>
</head>
<body>

  <div class="navbar">
    <a href="/node/feed">Feed</a>
    <% if (user.role === 'trader') { %>
      <a href="/node/create">Create Post</a>
    <% } %>
    <% if (user.role === 'trader') { %>
      <a href="/node/traderPosts">My Posts</a>
    <% } else if (user.role === 'farmer') { %>
      <a href="/node/farmerInterests">My Interests</a>
    <% } %>
    <a href="/node/logout">Logout</a>
  </div>

  <h1>Posts You're Interested In</h1>
  <div class="container">
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <h3><%= post.title %></h3>
          <p><%= post.description %></p>
          <p>Quantity: <%= post.quantity %></p>
          <p>Contact: <%= post.contactInfo %></p>
          <p>Posted by: <%= post.postedBy.username %></p>
        </li>
      <% }); %>
    </ul>
  </div>
  
</body>
</html>
